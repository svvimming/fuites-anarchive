{
  "uploader": {
    "maxFileSizeMb": 8
  },
  "toaster": {
    "display": 3,
    "timeout": 5000,
    "from": "top"
  },
  "fonts": [
    {
      "class": "nanum",
      "fontFaceDeclaration": "Nanum Myeongjo"
    },
    {
      "class": "courier",
      "fontFaceDeclaration": "Courier Prime"
    },
    {
      "class": "merriweather",
      "fontFaceDeclaration": "Merriweather"
    },
    {
      "class": "source-code",
      "fontFaceDeclaration": "Source Code Pro"
    },
    {
      "class": "anton",
      "fontFaceDeclaration": "Anton"
    },
    {
      "class": "arvo",
      "fontFaceDeclaration": "Arvo"
    }
  ],
  "thingieEditableParams": {
    "image": [
      {
        "directive": "toggleImageClip",
        "inner": "clip"
      }
    ],
    "text": [
      {
        "directive": "changeFontSize",
        "value": "up",
        "inner": "+size"
      },
      {
        "directive": "changeFontSize",
        "value": "down",
        "inner": "-size"
      },
      {
        "directive": "changeFontFamily",
        "inner": "font"
      },
      {
        "directive": "openColorEditor",
        "inner": "color"
      }
    ],
    "sound": [
      {
        "directive": "changePathStrokeWidth",
        "value": "up",
        "inner": "+width"
      },
      {
        "directive": "changePathStrokeWidth",
        "value": "down",
        "inner": "-width"
      },
      {
        "directive": "changeSoundLevel",
        "value": "up",
        "inner": "ðŸ”Š"
      },
      {
        "directive": "changeSoundLevel",
        "value": "down",
        "inner": "ðŸ”‰"
      }
    ],
    "shared": [
      {
        "directive": "rotateCW",
        "button": "retrigger",
        "inner": "CW"
      },
      {
        "directive": "rotateCCW",
        "button": "retrigger",
        "inner": "CCW"
      },
      {
        "directive": "bringForward",
        "inner": "Forward"
      },
      {
        "directive": "sendBack",
        "inner": "Back"
      }
    ]
  }  
}

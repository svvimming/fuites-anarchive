{
  "uploader": {
    "maxFileSizeMb": 8
  },
  "toaster": {
    "display": 3,
    "timeout": 5000,
    "from": "top"
  },
  "fonts": [
    {
      "class": "nanum",
      "fontFaceDeclaration": "Nanum Myeongjo"
    },
    {
      "class": "courier",
      "fontFaceDeclaration": "Courier Prime"
    },
    {
      "class": "merriweather",
      "fontFaceDeclaration": "Merriweather"
    },
    {
      "class": "source-code",
      "fontFaceDeclaration": "Source Code Pro"
    },
    {
      "class": "anton",
      "fontFaceDeclaration": "Anton"
    },
    {
      "class": "arvo",
      "fontFaceDeclaration": "Arvo"
    }
  ],
  "thingieEditableParams": {
    "image": [],
    "text": [
      {
        "type": "expandable",
        "name": "fontsize",
        "content": "fs",
        "params": [
          {
            "directive": "increaseFontSize",
            "content": "+size"
          },
          {
            "directive": "decreaseFontSize",
            "content": "-size"
          }
        ]
      },
      {
        "type": "static",
        "name": "fontstyle",
        "content": "IUB",
        "params": [
          {
            "directive": "toggleSelectionBold",
            "content": "B"
          },
          {
            "directive": "toggleSelectionItalic",
            "content": "I"
          },
          {
            "directive": "toggleSelectionUnderline",
            "content": "U"
          }
        ]
      },
      {
        "type": "expandable",
        "name": "fontfamily",
        "content": "f",
        "params": [
          {
            "directive": "setSelectionFontFamily",
            "button": "selector",
            "options": [
              "nanum",
              "courier",
              "merriweather",
              "arvo",
              "anton",
              "source-code"
            ]
          }
        ]
      }
    ],
    "sound": [],
    "shared": [
      {
        "type": "static",
        "name": "rotation",
        "content": "Î¸",
        "params": [
          {
            "directive": "rotateCW",
            "button": "retrigger",
            "content": "CW"
          },
          {
            "directive": "rotateCCW",
            "button": "retrigger",
            "content": "CCW"
          }
        ]
      },
      {
        "type": "static",
        "name": "z-index",
        "content": "z",
        "params": [
          {
            "directive": "bringForward",
            "content": "Forward"
          },
          {
            "directive": "sendBack",
            "content": "Back",
            "closeOnSelect": true
          }
        ]
      }
    ]
  }  
}
